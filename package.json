{
	"name": "bio-idek",
	"description": "Language extension for Antimony",
	"author": "Gary Geng",
	"publisher": "sauro-lab",
	"version": "0.0.1",
	"categories": [],
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Temporary Configurations",
			"properties": {}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "npx tsc -b",
		"watch": "npx tsc -b -w",
		"postinstall": "cd client && npm install && cd .. && sh ./scripts/installPythonReqs.sh",
		"pretest": "npm run compile",
		"test": "scripts\\runTestsDriver.bat"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.3",
		"@types/node": "^12.12.0",
		"@typescript-eslint/parser": "^2.3.0",
		"eslint": "^6.4.0",
		"mocha": "^8.1.1",
		"typescript": "^4.0.2"
	}
}
