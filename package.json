{
	"name": "bio-idek",
	"description": "Language extension for Antimony",
	"author": "Gary Geng",
	"publisher": "sauro-lab",
	"repository": {
		"type": "git",
		"url": "TBD"
	},
	"version": "0.0.1",
	"categories": [],
	"contributes": {
		"commands": [
			{
				"command": "antimony.createAnnotationDialog",
				"title": "Create Annotation"
			},
			{
				"command": "antimony.sendQuery",
				"title": "Invoke the web query service"
			},
			{
				"command": "antimony.getAnnotated",
				"title": "Get the list of annotated ranges in the source text"
			}
		],
		"languages": [
			{
				"id": "antimony",
				"extensions": [
					".ant"
				],
				"aliases": [
					"Antimony",
					"ant"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "antimony.createAnnotationDialog",
					"title": "Create Annotation",
					"group": "1_modification",
					"when": "editorLangId == antimony"
				}
			]
		},
		"grammars": [
			{
				"language": "antimony",
				"scopeName": "source.antimony",
				"path": "./syntaxes/antimony.tmLanguage.json"
			}
		]
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"onLanguage:antimony",
		"onCommand:sendQuery",
		"onCommand:createAnnotationDialog",
		"onCommand:getAnnotated"
	],
	"main": "./dist/extension",
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "webpack --mode development && npx tsc -b",
		"postinstall": "cd client && npm install && cd .. && sh ./scripts/installPythonReqs.sh",
		"pretest": "webpack",
		"test": "scripts\\runTestsDriver.bat"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.3",
		"@types/node": "^12.12.0",
		"@typescript-eslint/parser": "^2.3.0",
		"eslint": "^6.4.0",
		"mocha": "^8.1.1",
		"ts-loader": "^8.0.17",
		"typescript": "^4.0.2",
		"webpack": "^5.23.0",
		"webpack-cli": "^4.5.0"
	}
}
