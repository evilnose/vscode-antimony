{
	"name": "vscode-antimony",
	"displayName": "Antimony",
	"description": "Extensions for Antimony development in Visual Studio Code.",
	"author": "Steve Ma, Gary Geng, Joseph Hellerstein, Herbet Sauro",
	"publisher": "stevem",
	"version": "0.1.9",
	"icon": "docs/images/logo.png",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters",
		"Debuggers"
	],
	"keywords": [
		"Antimony",
		"Systems Biology",
		"Computational Biology"
	],
	"activationEvents": [
		"onLanguage:antimony",
		"onCommand:antimony.createAnnotationDialog",
            "onCommand:antimony.switchIndicationOn",
            "onCommand:antimony.switchIndicationOff",
		"onCommand:antimony.convertAntimonyToSBML",
		"onCommand:antimony.convertSBMLToAntimony",
		"onCommand:antimony.startSBMLWebview",
		"onCommand:antimony.startAntimonyWebview",
		"onCustomEditor:antimony.sbmlEditor",
		"onCustomEditor:antimony.antimonyEditor"
	],
	"main": "./dist/extension.js",
	"bugs": {
		"url": "https://github.com/sys-bio/vscode-antimony/issues",
		"email": "bochenma@cs.washington.edu"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/sys-bio/vscode-antimony.git"
	},
	"homepage": "https://github.com/sys-bio/vscode-antimony/blob/master/README.md",
	"contributes": {
		"customEditors": [
			{
				"viewType": "antimony.sbmlEditor",
				"displayName": "SBML",
				"selector": [
					{
						"filenamePattern": "*.ant"
					}
				],
				"priority": "option"
			},
			{
				"viewType": "antimony.antimonyEditor",
				"displayName": "Antimony",
				"selector": [
					{
						"filenamePattern": "*.ant"
					}
				],
				"priority": "option"
			}
		],
		"configuration": [
            {
                "title": "vscode-antimony",
                "properties": {
                    "vscode-antimony.pythonInterpreter": {
                        "type": "string",
                        "default": "python",
                        "scope": "machine",
                        "description": "The Python interpreter (>= 3.7) used to power the language backend. Either a full path or a name (e.g. 'python36')."
                    },
                    "vscode-antimony.switchAnnotatedVariableIndicationsOnOrOff": {
                        "type": "boolean",
                        "default": "true",
                        "scope": "machine",
                        "description": "Switch Visual Indications (Colored Highlights) of Annotated Variables On or Off."
                    },
                    "vscode-antimony.highlightColor": {
                        "type": "string",
                        "default": "indigo",
                        "scope": "machine",
                        "description": "Set Visual Indications (Colored Highlights) to a Preferred Color (e.g. red, orange, yellow, green, blue, indigo)"
                    }
                }
		    }
        ],
		"commands": [
			{
				"command": "antimony.createAnnotationDialog",
				"title": "Create Annotation"
			},
            {
				"command": "antimony.switchIndicationOn",
				"title": "Switch Annotated Variable Indications On"
			},
            {
				"command": "antimony.switchIndicationOff",
				"title": "Switch Annotated Variable Indications Off"
			},
			{
				"command": "antimony.convertAntimonyToSBML",
				"title": "Convert to SBML"
			},
			{
				"command": "antimony.convertSBMLToAntimony",
				"title": "Convert to Antimony"
			},
			{
				"command": "antimony.startSBMLWebview",
				"title": "preview SBML",
				"icon": "docs/images/sbml_color.png"
			},
			{
				"command": "antimony.startAntimonyWebview",
				"title": "preview Antimony",
				"icon": "docs/images/logo.png"
			}
		],
		"languages": [
			{
				"id": "antimony",
				"extensions": [
					".ant"
				],
				"aliases": [
					"Antimony",
					"ant"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "antimony.createAnnotationDialog",
					"title": "Create Annotation",
					"group": "1_modification",
					"when": "editorLangId == antimony"
				},
                {
                    "command": "antimony.switchIndicationOn",
                    "title": "Switch Annotated Variable Indications On",
                    "group": "1_modification",
                    "when": "config.vscode-antimony.switchAnnotatedVariableIndicationsOnOrOff == false"
                },
                {
                    "command": "antimony.switchIndicationOff",
                    "title": "Switch Annotated Variable Indications Off",
                    "group": "1_modification",
                    "when": "config.vscode-antimony.switchAnnotatedVariableIndicationsOnOrOff == true"
                },
				{
					"command": "antimony.convertAntimonyToSBML",
					"title": "Convert to SBML",
					"group": "1_modification",
					"when": "editorLangId == antimony"
				},
				{
					"command": "antimony.convertSBMLToAntimony",
					"title": "Convert to Antimony",
					"group": "1_modification",
					"when": "editorLangId == xml"
				}
			],
			"editor/title": [
				{
					"command": "antimony.startSBMLWebview",
					"title": "preview SBML",
					"group": "navigation",
					"when": "editorLangId == antimony"
				},
				{
					"command": "antimony.startAntimonyWebview",
					"title": "preview Antimony",
					"group": "navigation",
					"when": "editorLangId == xml"
				}
			]
		},
		"grammars": [
			{
				"language": "antimony",
				"scopeName": "source.antimony",
				"path": "./src/syntax/antimony.tmLanguage.json"
			},
			{
				"path": "./src/syntax/injection.json",
				"scopeName": "todo-comment.injection",
				"injectTo": [
					"source.antimony"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"watch": "tsc -watch -p ./",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "webpack --mode development && npx tsc -b",
		"postinstall": "cd src/syntax/antimony-syntax && npm install",
		"pretest": "webpack",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"ts-loader": "^9.2.6",
		"typescript": "^4.4.4",
		"webpack": "^5.67.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"vsce": "^2.6.3",
		"vscode-languageclient": "8.0.0-next.7"
	}
}
