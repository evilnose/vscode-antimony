{
	"name": "vscode-antimony",
	"displayName": "vscode-antimony",
	"description": "VSCode extension for the Antimony language.",
	"author": "Steve Ma",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:antimony",
		"onCommand:createAnnotationDialog"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "antimony.createAnnotationDialog",
				"title": "Create Annotation"
			}
		],
		"languages": [
			{
				"id": "antimony",
				"extensions": [
					".ant"
				],
				"aliases": [
					"Antimony",
					"ant"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "antimony.createAnnotationDialog",
					"title": "Create Annotation",
					"group": "1_modification",
					"when": "editorLangId == antimony"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
